{
  "name": "crypto-market-monitor",
  "version": "1.0.0",
  "description": "Comprehensive crypto market monitoring with AI-powered analysis",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "node server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build:client",
    "build:client": "cd client && CI=false npm run build",
    "install-client": "cd client && npm ci --only=production",
    "heroku-postbuild": "npm run build:client",
    "postinstall": "cd client && npm ci --only=production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "test:optimization": "jest tests/unit/data-collection-optimization.test.js tests/unit/api-endpoint-optimization.test.js",
    "test:email": "jest tests/unit/email-service-comprehensive.test.js",
    "test:integration": "jest tests/integration",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:unit": "jest tests/unit",
    "test:api": "jest tests/unit/api.test.js",
    "test:auth": "jest tests/unit/auth.test.js",
    "test:frontend": "jest tests/integration/frontend.test.js",
    "test:brevo": "node test-brevo-email.js",
    "create-admin": "node scripts/createProductionAdmin.js",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "db:logs": "docker-compose logs postgres",
    "db:connect": "docker-compose exec postgres psql -U postgres -d crypto_market_watch",
    "setup": "./scripts/dev-setup.sh"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.6.0",
    "multer": "^2.0.0-rc.4",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "stripe": "^14.0.0",
    "validator": "^13.15.15",
    "web-push": "^3.6.6"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lucide-react": "^0.544.0",
    "nodemon": "^3.1.10",
    "react-router-dom": "^7.8.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
