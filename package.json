{
  "name": "crypto-market-monitor",
  "version": "1.0.0",
  "description": "Comprehensive crypto market monitoring with AI-powered analysis",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "node server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build:client",
    "build:client": "cd client && CI=false npm run build",
    "install-client": "cd client && npm ci --only=production",
    "heroku-postbuild": "npm run build:client",
    "postinstall": "cd client && npm ci --only=production",
    "test": "echo 'Tests skipped in production'",
    "test:watch": "echo 'Tests skipped in production'",
    "test:coverage": "echo 'Tests skipped in production'",
    "test:e2e": "echo 'Tests skipped in production'",
    "test:e2e:open": "echo 'Tests skipped in production'",
    "test:unit": "echo 'Tests skipped in production'",
    "test:integration": "echo 'Tests skipped in production'",
    "test:api": "echo 'Tests skipped in production'",
    "test:auth": "echo 'Tests skipped in production'",
    "test:frontend": "echo 'Tests skipped in production'",
    "test:brevo": "node test-brevo-email.js",
    "create-admin": "node scripts/createProductionAdmin.js",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "db:logs": "docker-compose logs postgres",
    "db:connect": "docker-compose exec postgres psql -U postgres -d crypto_market_watch",
    "setup": "./scripts/dev-setup.sh"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",

    "stripe": "^14.0.0",
    "web-push": "^3.6.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
