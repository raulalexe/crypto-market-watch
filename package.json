{
  "name": "crypto-market-monitor",
  "version": "1.0.0",
  "description": "Comprehensive crypto market monitoring with AI-powered analysis",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "node test-script.js",
    "test:basic": "node test-script.js",
    "vercel-build": "cd client && npm run build",
    "start": "node server/index.js",
    "postinstall": "npm run build",
    "collect-data": "node scripts/collectData.js",
    "setup-cron": "node scripts/setupCron.js",
    "railway-start": "npm run build && npm start"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
