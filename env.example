# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/crypto_market_watch

# JWT Secret (change this in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Brevo)
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@yourdomain.com

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook
TELEGRAM_CHAT_IDS=123456789,987654321

# AI Configuration
VENICE_AI_KEY=your_venice_ai_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Economic Data APIs
FRED_API_KEY=your_fred_api_key_here

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Test Environment (for development)
STRIPE_TEST_SECRET_KEY=sk_test_your_test_stripe_secret_key_here
STRIPE_TEST_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here

# Stripe Live Environment (for production)
STRIPE_LIVE_SECRET_KEY=sk_live_your_live_stripe_secret_key_here
STRIPE_LIVE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Admin Setup (for first-time admin creation)
FIRST_ADMIN_SETUP_KEY=crypto-market-2024

# User Creation on Deploy
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password
PRO_EMAIL=pro@yourdomain.com
PRO_PASSWORD=your-secure-pro-password

# Environment
NODE_ENV=development
PORT=3001

# Cron Jobs (set to true to enable automatic data collection)
ENABLE_CRON_JOBS=false

# Optional: Wipe users on startup (set to true to clear all users)
WIPE_USERS=false
